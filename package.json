{
   "name": "NodeJsBaseProject",
   "version": "1.0.0",
   "description": "",
   "main": "index.js",
   "scripts": {
      "ts-build": "tsc",
      "ts-run-dist": "npm run lint && npm run test && npm run ts-build && node dist/server.js",
      "babel-build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
      "babel-run-dist": "npm run lint && npm run test && npm run babel-build",
      "dev": "nodemon --watch \"src/\" --exec \"ts-node ./src/server.ts\" -e ts",
      "start": "npm run ts-run-dist",
      "test:coverage": "jest --coverage",
      "test": "jest --no-cache --detectOpenHandles",
      "lint": "npx eslint . --ext .js,.ts"
   },
   "keywords": [],
   "author": "",
   "license": "ISC",
   "dependencies": {
      "@types/express": "^4.17.6",
      "@types/jest": "^26.0.0",
      "@types/supertest": "^2.0.9",
      "cors": "^2.8.5",
      "dotenv": "^8.2.0",
      "express": "^4.17.1",
      "global": "^4.4.0",
      "i": "^0.3.6",
      "jest": "^26.0.1",
      "mysql": "^2.18.1",
      "reflect-metadata": "^0.1.13",
      "supertest": "^4.0.2",
      "ts-jest": "^26.1.0",
      "typeorm": "0.2.26"
   },
   "devDependencies": {
      "@babel/cli": "^7.10.5",
      "@babel/core": "^7.11.1",
      "@babel/node": "^7.10.5",
      "@babel/preset-env": "^7.11.0",
      "@babel/preset-typescript": "^7.10.4",
      "@types/cors": "^2.8.6",
      "@types/node": "^8.0.29",
      "@typescript-eslint/eslint-plugin": "^3.5.0",
      "@typescript-eslint/parser": "^3.5.0",
      "babel-plugin-module-resolver": "^4.0.0",
      "eslint": "^7.4.0",
      "eslint-config-airbnb-typescript": "^8.0.2",
      "eslint-plugin-import": "^2.22.0",
      "nodemon": "^2.0.4",
      "ts-node": "^9.0.0",
      "tsconfig-paths": "^3.9.0",
      "typescript": "^4.0.3"
   },
   "jest": {
      "testEnvironment": "node",
      "coveragePathIgnorePatterns": [
         "/node_modules/",
         "/dist/",
         "/coverage/"
      ],
      "transform": {
         "^.+\\.ts$": "ts-jest"
      },
      "testRegex": "\\.test\\.ts",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "jsx",
         "json",
         "node"
      ],
      "collectCoverageFrom": [
         "./src/**/*.{ts,js}",
         "**/*.{js,jsx}",
         "!**/node_modules/**",
         "!**/vendor/**"
      ]
   }
}
